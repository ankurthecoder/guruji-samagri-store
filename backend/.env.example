# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/guruji-samagri-store
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/guruji-samagri-store

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Firebase Admin SDK
# Download your Firebase service account JSON and place it in backend/config/
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# CORS Configuration
CLIENT_URL=http://localhost:3000
MOBILE_CLIENT_URL=http://localhost:8081

# Admin Credentials (for initial admin user)
ADMIN_EMAIL=admin@gurujismagri.com
ADMIN_PASSWORD=Admin@123
